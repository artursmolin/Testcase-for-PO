<h1 style="margin-bottom:50px"> Your profile </h1>

<table style="background-color:whitesmoke" class="table">
  <thead>
    <th> First name </th>
    <th> Last Name </th>
    <th> Middle Name </th>
    <th> Sex </th>
    <th colspan="3"> Actions </th>
  </thead>
  <tbody>
    <td><%= @person.first_name %></td>
    <td><%= @person.last_name %></td>
    <td><%= @person.middle_name %></td>
    <td><%= @person.sex %></td>
