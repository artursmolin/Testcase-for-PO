    <td style="padding-right:10px"><%= link_to 'Back to all persons', people_path, class: :"button is-small is-info"%></td>
    <td><%= button_to 'Delete person', {controller: :people,
        action: :'destroy', id: @person.id }, class: :"button is-small is-danger", method: :delete %></a></td>
